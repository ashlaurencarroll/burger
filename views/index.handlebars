<h1></h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burgers-block id=id devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h3>Eaten Burgers</h3>

<ul>
    {{#each burger}}
    {{#if devoured}}
      {{> burgers/burgers-block id=id devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

